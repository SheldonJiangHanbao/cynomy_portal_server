include header

link(href= static + "css/portal/platform.css" rel="stylesheet")
link(href= static + "css/portal/mask.css" rel="stylesheet")

div(class="popup")
  div(class="mask")
    div(class="box")
      header
        span My Research V1.1 输出资料
        span(class="btn_close")
      form(action="" class="form")
        div(class="file")
          span 上传文件为定位、价值、关键特性、路标、原型等资料
          span
            input(type="file" placeholder="" id="source")
            input(type="button" value="上传文档" id="uploadFile")
        div(class="description")
          ul(class="dataFile")
        div(class="last")
          span 上传人：
          span
            input(type="text" placeholder="输入姓名")
          span
            button(class="submit_re") 开始上传

div(class="container platform_content")
  div(class="content_one")
    div(class="tru")
      div(class="truTitle pc") TRU Mate PC端
      div(class="truContent")
        div(class="truBox")
          div 平台V1.0：
          - const _pc_products = locals.products.pc || [];
          ul
            each _p in _pc_products
              li(data-id=_p._id)
                span(class="aLink")= _p.name
    div(class="tru")
      div(class="truTitle android") TRU Mate 移动端
      div(class="truContent")
        div(class="truBox")
          div 平台V1.0：
          - const _android_products = locals.products.android || [];
          ul
            each _p in _android_products
              li(data-id=_p._id)
                span(class="aLink")= _p.name

  div(class="proposal")

  div(class="wrapper")
    - const _product = locals.product || {};
    div(class="tab_process")
      - const _process = _product.nodeList || [];
      - const _activeNode = _product.status || {};
      each _p,index in _process
        dl(class= _activeNode.index === _p.index? "processActive": "")
          dt
            a(href="javascript:void(0);" class="tabIcon tabIcon_plan" data-id=_p._id)
            span=_p.name
          dd &bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;
          div(class="clear")
    div(class="tab_content")
      div(class="dataBox")
        div(class="header")=`${_activeNode.name}资料`
          span(class="upload")
        - const _files = _activeNode.produceList || [];
        ul(class="data")
          each _file in _files
            li
              div
                i
                span(class="name")=_file.name
                span(class="time") 2017-01-25
                span 17:05:36
                span=_file.author.name
                span(data-id=_file._id class="download")
                span(class="dataClose")

include footer

script(src= static + "js/portal/rem.js")
script(src= static + "js/portal/platform.js")
